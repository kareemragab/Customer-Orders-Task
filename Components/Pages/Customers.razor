@page "/customers"
@using CustomerOrders.Models
@using DevExpress.Xpo
@using Microsoft.JSInterop
@using System.Linq
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Customers</PageTitle>

<h1>Customers</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToAdd">Add New Customer</button>
</div>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => NavigateToEdit(customer.Oid)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteCustomer(customer.Oid)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Customer> customers;

    protected override void OnInitialized()
    {
        LoadCustomers();
    }

    private void LoadCustomers()
    {
        using (var uow = new UnitOfWork())
        {
            customers = new XPQuery<Customer>(uow)
                .OrderByDescending(c => c.Oid)
                .ToList();
        }
    }

    private void NavigateToAdd()
    {
        Navigation.NavigateTo("/customers/add");
    }

    private void NavigateToEdit(int oid)
    {
        Navigation.NavigateTo($"/customers/edit/{oid}");
    }

    private async Task DeleteCustomer(int oid)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this customer?");
        if (confirmed)
        {
            using (var uow = new UnitOfWork())
            {
                var customer = uow.GetObjectByKey<Customer>(oid);
                if (customer != null)
                {
                    uow.Delete(customer);
                    uow.CommitChanges();
                    LoadCustomers();
                }
            }
        }
    }
}
